{
  "name": "caprover-lib",
  "version": "0.0.1",
  "description": "A library to communicate with CapRover instances",
  "main": "./built/commands/caprover.js",
  "scripts": {
    "dev": "concurrently 'yarn build --watch' 'yarn types --watch'",
    "build": "babel ./src -d ./dist --extensions .ts --copy-files",
    "types": "tsc --declaration --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "lint:base": "eslint --ext .js,.json,.ts",
    "lint": "yarn lint:base src",
    "prepare": "simple-pre-commit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HorusGoul/caprover-lib"
  },
  "keywords": [
    "Docker",
    "Automated",
    "Deployment",
    "Heroku",
    "Free",
    "NodeJS",
    "PHP",
    "Nginx",
    "Server",
    "Container"
  ],
  "contributors": [
    "Kasra Bigdeli",
    "Horus Lugo LÃ³pez (https://horus.dev)"
  ],
  "license": "Apache-2.0",
  "simple-pre-commit": "yarn typecheck && yarn lint-staged",
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "yarn lint:base --fix"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "command-exists": "^1.2.8",
    "commander": "^2.20.0",
    "configstore": "^5.0.0",
    "fs-extra": "^8.1.0",
    "inquirer": "^6.5.0",
    "js-yaml": "^3.13.1",
    "ora": "^3.4.0",
    "progress": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@types/command-exists": "^1.2.0",
    "@types/configstore": "^4.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/inquirer": "6.5.0",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^16.0.1",
    "@types/ora": "^3.2.0",
    "@types/progress": "^2.0.3",
    "@types/request-promise": "^4.1.45",
    "@types/update-notifier": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "simple-pre-commit": "^1.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=14"
  }
